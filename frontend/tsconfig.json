{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"],
      "@env": ["./.env"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "jsx": "react-native",
    "skipLibCheck": true
  },
  "include": ["src/**/*", "env.d.ts"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
